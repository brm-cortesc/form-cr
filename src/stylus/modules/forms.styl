	&-group
		border 1px solid white
		border-radius 0.5rem
		margin 0.25rem auto
		// max-width 90%
		padding .5rem 1rem
		position relative
		transitionBase()
		width 100%
		
		label
			cursor pointer
			display block
			text-transform uppercase
			font-size 1.3rem

			
		input,
		.select
			background-color transparent
			border 1px solid $gris
			font-size: 1.4rem
			margin 0
			padding 0.5rem
			text-transform uppercase
			transitionBase()
			width: 100%
			
		select
			background-color transparent
			border none
			color $azul
			cursor pointer
			display block
			font-size: 1.4rem
			padding 0
			text-transform uppercase
			transitionBase()
			width: 100%
			
			option
				color $azul !important
				text-transform uppercase
	&-radio
		cursor pointer
		
		label,
		input
			cursor pointer
			
			
	&-select
		cursor pointer
	
			
.msn-place
	color $brand-warning
	font-size 1rem
	padding 0 1rem
		
.row-tipo
	.msn-place
		clear both
		text-align center
