#aval-form
	margin 2rem auto 
	z-index 2
	
	input
		&[type="number"]
			appearance none
			
			&::-webkit-outer-spin-button
			&::-webkit-inner-spin-button
				appearance none
				margin 0
	
	small
		color $rojo
		display block
		margin-bottom 1rem
		text-align center
		

	fieldset
		border 1px solid $gris
		margin-bottom 1rem
		margin-top @margin-bottom
		padding-bottom 1rem
		padding-top @padding-bottom
		
		legend
			background-color #ccc
			border none
			display block
			margin 0.5rem auto
			text-align center
			text-transform uppercase
	.col-fecha
		text-align right

		.fecha
			font-size 120%
			display block
			text-align right		

.form
	&-checkbox
		border-color transparent !important
		cursor pointer
		margin-bottom 3rem !important
		
		.checkbox
			cursor pointer
			padding 0 0 2rem
			position relative
			
